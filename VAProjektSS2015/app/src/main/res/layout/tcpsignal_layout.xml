<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:padding="35dp"
        android:textColor="@android:color/white"
        android:text="Smart Home - TCP Connection"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:background="@android:color/darker_gray"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="destAddress"
        android:id="@+id/TcpDestAdr"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:background="@android:color/darker_gray"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="destPort"
        android:id="@+id/TcpDestPrt"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:text="Connect"
        android:background="@android:color/holo_green_light"
        android:onClick="onClickTcpConnect"
        android:id="@+id/TcpCnctBtn"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:text="clear"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClickTcpClear"
        android:id="@+id/TcpClrBtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TcpRespView"/>

</LinearLayout>